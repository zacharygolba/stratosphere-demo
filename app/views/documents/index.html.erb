<div class="container">
    <div class="content-heading clearfix">
        <div class="pull-left">
            <h4>Documents</h4>
        </div>
        <div class="pull-right">
            <div class="btn-group-xs">
                <button class="btn btn-xs btn-success" data-perform="create" data-model="document">New Document</button>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date Created</th>
                <th></th>
            </tr>
        </thead>
        <tbody data-paginated="true" data-total-pages="<%= Document.with_attachment.total_pages %>" data-model="document" data-is-paginating="false">
            <%= render 'documents' %>
        </tbody>
    </table>
</div>