<div class="container">
    <%= form_for @post do |f| %>
        <div class="content-heading clearfix">
            <div class="pull-left">
                <h4>Post: <%= @post.id %> (<%= @post.title %>)</h4>
            </div>
            <div class="pull-right">
                <div class="btn-group btn-group-xs">
                    <button type="button" class="btn btn-primary" data-perform="back">Back</button>
                    <button type="button" class="btn btn-primary" data-perform="delete" data-model="post" data-id="<%= @post.id %>">Delete</button>
                    <%= button_tag 'Save', type: 'submit', class: 'btn btn-primary' %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :title, class: 'control-label' %>
            <%= f.text_field :title, class: 'form-control', placeholder: 'New Post' %>
        </div>
        <div class="form-group">
            <%= render partial: 'stratosphere/attachment_field', locals: { model: @post } %>
        </div>
    <% end %>
</div>